<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="switchButton">
        <attr name="onColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="thumbOnColor" format="reference|color" />
        <attr name="thumbOffColor" format="reference|color" />
        <attr name="thumbStyle">

            <!-- default -->
            <enum name="padding" value="0" />
            <enum name="match" value="1" />
        </attr>
        <attr name="isOn" format="boolean" />
        <attr name="buttonSize" format="float" />
    </declare-styleable>
    <declare-styleable name="radiusImage">
        <attr name="radius" format="dimension" />
        <attr name="radiusTopLeft" format="dimension" />
        <attr name="radiusTopRight" format="dimension" />
        <attr name="radiusBottomLeft" format="dimension" />
        <attr name="radiusBottomRight" format="dimension" />
        <attr name="borderColor" format="reference|color" />
        <attr name="borderWidth" format="integer" />
        <attr name="imageAlpha" format="float" />
        <attr name="borderStyle">
            <enum name="outside" value="0"/>
            <enum name="over" value="1" />
        </attr>
        <attr name="radiusScaleType">
            <!-- default -->
            <enum name="centerInside" value="9" />
            <enum name="leftCenter" value="1" />
            <enum name="rightCenter" value="2" />
            <enum name="topCenter" value="3" />
            <enum name="bottomCenter" value="4" />
            <enum name="topLeft" value="5" />
            <enum name="topRight" value="6" />
            <enum name="bottomLeft" value="7" />
            <enum name="bottomRight" value="8" />
            <enum name="centerCrop" value="0"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="iconView">
        <attr name="icon" format="reference|string" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconColor" format="reference|color" />
        <attr name="iconGravity">
            <enum name="center" value="1"/>
            <enum name="left" value="2"/>
            <enum name="top" value="4"/>
            <enum name="right" value="8"/>
            <enum name="bottom" value="16"/>
        </attr>
        <attr name="iconScaleType">
            <enum name="center" value="0" />
            <enum name="withWidth" value="1" />
            <enum name="withHeight" value="2" />
        </attr>
        <attr name="iconDir">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="iconPadding" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="iconCheckBox">
        <attr name="iconCheckedColor" format="reference|color"/>
        <attr name="iconChecked" format="reference|string"/>
    </declare-styleable>

</resources>