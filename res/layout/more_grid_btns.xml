<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" 
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:clickable="true"
            android:background="@drawable/more_grid_btn_selector"
             >

            <TextView
                android:id="@+id/msg_center_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/more_msg_center"
                android:text="@string/more_msg_center"
                android:textColor="@color/gray_80"
                android:textSize="@dimen/middle_size"
                 />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/msg_center_txt"
                android:layout_marginRight="-8dp"
                android:background="@drawable/msg_tip_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/more_msg_tip"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <include layout="@layout/more_split_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp" 
            android:clickable="true"
            android:background="@drawable/more_grid_btn_selector"
            >

            <TextView
                android:id="@+id/more_activities"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/more_activities"
                android:text="@string/more_activities"
                android:textColor="@color/gray_80" 
                android:textSize="@dimen/middle_size"
                />
        </LinearLayout>

        <include layout="@layout/more_split_v" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp" 
            android:background="@drawable/more_grid_btn_selector"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/more_appcenter_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/more_app_center"
                android:text="@string/more_app_center"
                android:textColor="@color/gray_80" 
                android:layout_centerInParent="true"
                android:textSize="@dimen/middle_size"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignRight="@id/more_appcenter_txt"
                android:background="@drawable/appcenter_tip_point" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/more_split_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp" 
            android:clickable="true"
            android:background="@drawable/more_grid_btn_selector"
            >

            <TextView
                android:id="@+id/more_sys_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/more_sys_setting"
                android:text="@string/more_sys_setting"
                android:textColor="@color/gray_80" 
                android:textSize="@dimen/middle_size"
                />
        </LinearLayout>

        <include layout="@layout/more_split_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp" 
            android:clickable="true"
            android:background="@drawable/more_grid_btn_selector"
            >

            <TextView
                android:id="@+id/more_feedback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/more_feedback"
                android:text="@string/more_feedback"
                android:textColor="@color/gray_80" 
                android:textSize="@dimen/middle_size"
                />
        </LinearLayout>

        <include layout="@layout/more_split_v" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp" 
            android:clickable="true"
            android:background="@drawable/more_grid_btn_selector"
            >

            <TextView
                android:id="@+id/more_exit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/more_exit"
                android:text="@string/more_exit"
                android:textColor="@color/gray_80" 
                android:gravity="center"
                android:textSize="@dimen/middle_size"
                />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/more_split_h" />

</LinearLayout>