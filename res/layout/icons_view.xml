<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gwidget="http://schemas.android.com/apk/res/com.gecq.gwidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="10dp"
        >
        <com.gecq.gwidget.IconView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            gwidget:icon="@string/icon_round_checked" 
            gwidget:iconSize="20sp"
            />
        <com.gecq.gwidget.IconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gwidget:icon="@string/icon_round_unchecked" />
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.gecq.gwidget.IconView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            gwidget:icon="@string/icon_round_checked" />
        
         <com.gecq.gwidget.IconCheckBox
             android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            gwidget:icon="@string/icon_round_unchecked" 
            gwidget:iconColor="#cccccc"
            gwidget:iconChecked="@string/icon_radio_checked"
            gwidget:iconCheckedColor="@color/pink"
            gwidget:iconSize="26sp"
            />
        
    </LinearLayout>

</LinearLayout>