<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004d40"
    android:orientation="vertical" >

    <ViewFlipper
        android:id="@+id/body_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f0f0f0" >
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
         <include
            android:id="@+id/layout01"
            layout="@layout/icons_view" />
        <include
            android:id="@+id/layout02"
            layout="@layout/icon_checkbox" />
        <include
            android:id="@+id/layout03"
            layout="@layout/blur_image_view" />
        <include
            android:id="@+id/layout04"
            layout="@layout/radius_image" />
        <include
            android:id="@+id/layout05"
            layout="@layout/icon_text_view" />
        
         <include
            android:id="@+id/layout06"
            layout="@layout/switch_button" />
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                         
    </ViewFlipper>
</LinearLayout>